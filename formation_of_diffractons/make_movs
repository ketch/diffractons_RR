#!/bin/bash

clear
mkdir animations
echo "*****************************"
echo "*** Script to create MOVs ***"
echo "*****************************"
echo " "

echo "sigma"
echo "  pcolor"
path="./_plots_animation/_p/pcolor"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/sigma_pcolor.mov"
echo "  surface"
path="./_plots_animation/_p/surface"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/sigma_surface.mov"
echo "  slices"
path="./_plots_animation/_p/slices"
convert -delay 5 -loop 0 "$path/*.eps" -delay 200 "$path/*0400*" "./animations/sigma_slices.mov"

echo "q0"
echo "  pcolor"
path="./_plots_animation/_q0/pcolor"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/q0_pcolor.mov"
echo "  surface"
path="./_plots_animation/_q0/surface"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/q0_surface.mov"
echo "  slices"
path="./_plots_animation/_q0/slices"
convert -delay 5 -loop 0 "$path/*.eps" -delay 200 "$path/*0400*" "./animations/q0_slices.mov"

echo "q2"
echo "  pcolor"
path="./_plots_animation/_q2/pcolor"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/q2_pcolor.mov"
echo "  surface"
path="./_plots_animation/_q2/surface"
convert -delay 5 -loop 0 "$path/*.png" -delay 200 "$path/*0400*" "./animations/q2_surface.mov"
echo "  slices"
path="./_plots_animation/_q2/slices"
convert -delay 5 -loop 0 "$path/*.eps" -delay 200 "$path/*0400*" "./animations/q2_slices.mov"
